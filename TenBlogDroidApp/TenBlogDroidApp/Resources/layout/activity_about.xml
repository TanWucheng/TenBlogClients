<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/coordinator_about">

	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fitsSystemWindows="true"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar_about"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			app:title="@string/about"
			app:popupTheme="@style/AppTheme"
			app:theme="@style/OverFlowMenuTheme"/>

	</com.google.android.material.appbar.AppBarLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/iv_logo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/github"
				android:layout_marginTop="@dimen/dp_128"
				android:layout_gravity="center_horizontal"
				android:contentDescription="@string/app_name" />

			<TextView
				android:id="@+id/tv_release_version"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp_8"
				android:layout_gravity="center_horizontal"
				android:text="@string/app_name_cn"/>

			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/dp_32"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardElevation="@dimen/dp_6"
				app:cardCornerRadius="@dimen/dp_8"
				app:cardPreventCornerOverlap="false"
				app:cardUseCompatPadding="true">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<LinearLayout
						android:id="@+id/ll_email_contact"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="16dp"
						android:background="@drawable/ripple_accent"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/dp_16"
							android:textSize="@dimen/sp_20"
							android:text="@string/font_mail" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/dp_16"
							android:textColor="@android:color/black"
							android:text="@string/email_contact" />

					</LinearLayout>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="@dimen/dp_1"
						android:background="@color/colorDivider" />

					<LinearLayout
						android:id="@+id/ll_check_update"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="@dimen/dp_16"
						android:background="@drawable/ripple_accent"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/dp_16"
							android:textSize="@dimen/sp_20"
							android:text="@string/font_cloud_download" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/dp_16"
							android:textColor="@android:color/black"
							android:text="@string/check_update" />

					</LinearLayout>

				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/dp_16"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/ll_about"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp_56"
				android:gravity="center"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tv_official_website"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/official_website"
					android:padding="@dimen/dp_4"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="8dp"
					android:textColor="@color/colorAccent"
					android:padding="@dimen/dp_4"
					android:text="|"/>

				<TextView
					android:id="@+id/tv_privacy"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/dp_4"
					android:text="@string/privacy"/>

			</LinearLayout>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dp_4"
				android:padding="@dimen/dp_4"
				android:text="@string/font_copyright"
				android:layout_gravity="center_horizontal|bottom"/>
		</LinearLayout>
	</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
